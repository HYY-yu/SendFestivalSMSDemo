<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sms_item"
        android:text="New Text"
        android:padding="8dp"
        android:id="@+id/listview_textView"
        android:layout_gravity="center_horizontal"/>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Button
            android:layout_width="33dp"
            android:layout_height="33dp"
            style="?android:attr/buttonStyleSmall"
            android:background="@android:drawable/ic_menu_share"
            android:id="@+id/button_share"
            android:layout_centerVertical="true"/>

        <ToggleButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:textOn=""
            android:textOff=""
            style="?android:attr/buttonStyleSmall"
            android:background="@drawable/btn_star_bg"
            android:id="@+id/button_star"
            android:layout_toRightOf="@+id/button_share"
            android:layout_centerVertical="true"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:text="发送"
            android:drawableLeft="@mipmap/icon_send"
            android:id="@+id/listview_button"

            android:layout_gravity="right"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</LinearLayout>